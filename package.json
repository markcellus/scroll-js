{
  "name": "scroll-js",
  "version": "3.0.0",
  "description": "Light cross-browser scroller that uses native javascript",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkay581/scroll-js.git"
  },
  "homepage": "https://github.com/mkay581/scroll-js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Mark Kennedy <mark@heyimmark.com> (heyimmark.com)",
  "keywords": [
    "scroller",
    "scroll",
    "scroll class",
    "scrolljs",
    "scroll js",
    "scrollTo",
    "scroll events",
    "scrollintoview",
    "scroll into view",
    "window scroll",
    "window scroll polyfill",
    "scroll into view polyfill"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "./dist/scroll.common.js",
  "module": "./dist/scroll.js",
  "types": "./dist/scroll.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "karma start karma.conf.js && npm run lint",
    "test-server": "karma start karma.conf.js --single-run=false",
    "preversion": "npm test",
    "build": "rm -rf dist/* && rollup -c",
    "banner": "banner-cli dist/*.js",
    "start": "rollup -c --watch",
    "lint": "eslint '**/*.{js,ts}'",
    "coveralls": "cat .coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@open-wc/karma-esm": "^2.2.8",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "banner-cli": "^0.14.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.1.0",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^7.0.2",
    "karma-typescript-preprocessor": "^0.4.0",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "raf-stub": "^3.0.0",
    "rollup": "^1.18.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "sinon": "^7.4.0",
    "typescript": "^3.5.3"
  }
}
