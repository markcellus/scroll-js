{
  "name": "scroll-js",
  "version": "2.0.0-dev",
  "description": "Light Scroller class that uses native javascript only",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkay581/scroll-js.git"
  },
  "homepage": "https://github.com/mkay581/scroll-js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Mark Kennedy <mark@heyimmark.com> (heyimmark.com)",
  "keywords": [
    "scroller",
    "scroll",
    "scroll class",
    "scrolljs",
    "scroll js",
    "scrollTo",
    "scroll events",
    "scrollintoview",
    "scroll into view",
    "window scroll",
    "window scroll polyfill",
    "scroll into view polyfill"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "./dist/scroll.js",
  "scripts": {
    "test": "karma start karma.conf.js && npm run lint",
    "test-server": "karma start karma.conf.js --single-run=false",
    "preversion": "npm test",
    "minify": "uglifyjs dist/scroll.js -o dist/scroll.min.js",
    "build-dist": "rm -rf dist/* && rollup -c && npm run minify",
    "version": "npm run build-dist && banner-cli dist/*.js && git add -A dist",
    "postversion": "git push && git push --tags",
    "start": "rollup -c --watch",
    "lint": "tslint src/**/*"
  },
  "devDependencies": {
    "banner-cli": "0.11.1",
    "chai": "^4.1.2",
    "es6-promise": "^4.0.5",
    "eslint": "^5.5.0",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^6.0.1",
    "mocha": "^5.2.0",
    "mock-raf": "^1.0.0",
    "rollup": "^0.66.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "sinon": "^6.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3",
    "uglify-es": "^3.3.9"
  }
}
